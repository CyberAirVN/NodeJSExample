<html>
<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no">
  <title>Demo HomeWork</title>
  <!-- Bootstrap -->
  <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">
  		<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
  		<script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>


</head>

<body>
  <div class= "container">
    <h3>DEMO MANAGEMENT</h3>
  </div>
  <div class = "container">

    <div class="panel panel-primary">
      <div class="panel-heading" role="tab" id="headingOne">
        <h4 class="panel-title">
          Databoards
        </h4>
      </div>
    </div>

    <div id="collapseOne" class="panel-collapse collapse in" role="tabpanel" aria-labelledby="headingOne">
      <div class="panel-body">
        <div>
          <form class="form-horizontal">
  <div>
    <div class="form-group">
      <form action = "http://localhost:3000/them" method="post">
        <label for="Hoten" class="col-sm-2 control-label">Họ và tên</label>
        <div class="col-sm-10">
          <input type="text" class="form-control" name ="name" placeholder="Nguyễn Văn A">
        </div>
      </div>
    </div>
    <div class="form-group">
      <label for="Gioitinh" class="col-sm-2 control-label">Giới tính</label>
      <div class="col-sm-4">
        <input type="text" class="form-control" name ="gt" placeholder="Nam/Nữ">
      </div>
      <label for="Namsinh" class="col-sm-2 control-label">Năm sinh</label>
      <div class="col-sm-4">
        <input type="date" class="form-control" name ="birthday" placeholder="01/01/1170">
      </div>

  </div>

  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <input type="submit" class="btn btn-default" value="Thêm"></input>
    </div>
  </div>
</form>
        </div>
      </div>




    <div id="collapseOne" class="panel-collapse collapse in" role="tabpanel" aria-labelledby="headingOne">
      <table class="table table-hover">
        <tr>
          <td class="active">MSSV</td>
          <td class="active">Họ và tên</td>
          <td class="active">Giới tính</td>
          <td class="active">Ngày sinh</td>
        </tr>
        <% data.forEach(function(item){%>
          <tr>
            <td><%= item.mssv%></td>
            <td><%= item.name%></td>
            <td><%= item.gt%></td>
            <td><%= item.birthday%></td>

          <td>
            <a href="http://localhost:3000/xoa/<%=item.id%>">
              <button class="btn btn-danger btn-xs delete_data">
                <span class="glyphicon glyphicon-trash"></span>
              </button>
            </a>
          </td>
          </tr>
      <%  }) %>
      </table>
    </div>

  </div>

</body>

<footer>
</footer>

</html>
