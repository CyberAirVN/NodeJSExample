  <body>
    <div class= "container">
      <h3>DEMO MANAGEMENT</h3>
    </div>

    <div class = "container">

      <div class="panel panel-primary">
        <div class="panel-heading" role="tab" id="headingOne">
          <h4 class="panel-title">
            Databoards
          </h4>
        </div>
      </div>

      <div class="panel-body">
        <form class="form-horizontal" action = "http://localhost:3000/add" method="post">
          <div class="row">
            <div class="form-group">
              <label class="col-sm-2 control-label">Họ và tên</label>
              <div class="col-sm-3">
                <input type="text" class="form-control" name ="name" placeholder="Nguyễn Văn A">
              </div>

              <label class="col-sm-2 control-label">Giới tính</label>
              <div class="col-sm-2">
                <input type="text" class="form-control" name ="gt" placeholder="Nam/Nữ">
              </div>
            </div>
          </div>

          <div class="row">
            <div class="form-group">
              <label class="col-sm-2 control-label">MSSV</label>
              <div class="col-sm-2">
                <input type="text" class="form-control" name ="mssv" placeholder="SV0213">
              </div>

              <label for="Namsinh" class="col-sm-3 control-label">Năm sinh</label>
              <div class="col-sm-1">
                <input type="numder" class="form-control" name ="birthday" placeholder="1790">
              </div>
            </div>
          </div>

          <div class="row">
            <div class="form-group">
              <div class="col-sm-offset-2 col-sm-10">
                <input class="btn btn-success" type="submit" class="btn btn-default" value="Thêm"></input>
              </div>
            </div>
          </div>

        </form>
    </div>
    <hr>

    </div>
    <div class="container">
      <div id="collapseOne" class="panel-collapse collapse in" role="tabpanel" aria-labelledby="headingOne">
        <div class="panel-body">
          <table class="table table-bordered">
            <div class ="form-group ">
              <tr class = "success">
                <td class="active">MSSV</td>
                <td class="active">Họ và tên</td>
                <td class="active">Giới tính</td>
                <td class="active">Ngày sinh</td>
                <td class="active">Thao tác quản lý</td>
              </tr>
              <% data.forEach(function(item){%>
                <tr>
                  <td><?php echo item.mssv ?></td>
                  <td><%= item.name%></td>
                  <td><%= item.gt%></td>
                  <td><%= item.birthday%></td>

                  <td>
                    <a href="http://localhost:3000/delete/<%=item.id%>">
                      <button class="btn btn-danger btn-xs delete_data">
                        <span class="glyphicon glyphicon-trash"></span>
                      </button>
                    </a>
                    <a>
                      <button type="button" class="btn btn-danger btn-xs" data-toggle="modal" data-target=".bs-example-modal-lg">
                        <span class="glyphicon glyphicon-pencil"></span>
                      </button>
                    </a>

                  </td>
                </tr>
              <%  }) %>

              <!-- Button trigger modal -->
              <!-- Modal -->

                <div class="modal fade bs-example-modal-lg" tabindex="-1" role="dialog" aria-labelledby="myLargeModalLabel">
                  <div class="modal-dialog modal-lg" role="document">
                    <div class="modal-content">
                  <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                    <h4 class="modal-title" id="gridSystemModalLabel">Update</h4>
                  </div>
                  <div class="modal-body">
                    <form class="form-horizontal" action = "http://localhost:3000/update/<%=item.id%>" method="post">
                      <div class="row">
                        <div class="form-group">
                          <label class="col-sm-2 control-label">Họ và tên</label>
                          <div class="col-sm-3">
                            <input type="text" class="form-control" name ="name" placeholder="Nguyễn Văn A">
                          </div>

                          <label class="col-sm-2 control-label">Giới tính</label>
                          <div class="col-sm-2">
                            <input type="text" class="form-control" name ="gt" placeholder="Nam/Nữ">
                          </div>
                        </div>
                      </div>

                      <div class="row">
                        <div class="form-group" action = "http://localhost:3000/update/<%=item.id%>" method="post">
                          <label class="col-sm-2 control-label">MSSV</label>
                          <div class="col-sm-3">
                            <input type="text" class="form-control" name ="mssv" placeholder="SV0213">
                          </div>

                          <label for="Namsinh" class="col-sm-2 control-label">Năm sinh</label>
                          <div class="col-sm-2">
                            <input type="numder" class="form-control" name ="birthday" placeholder="1790">
                          </div>
                        </div>
                      </div>

                    </form>
                  </div>
                  <div class="modal-footer">
                    <button type="button" class="btn btn-primary">Save changes</button>
                    <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                  </div>
                </div><!-- /.modal-content -->
              </div><!-- /.modal-dialog -->
            </div><!-- /.modal -->

            </div>
          </table>

        </div>
      </div>
    </div>



