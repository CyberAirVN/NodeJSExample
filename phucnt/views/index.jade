extends layout

block content
  h1= title
  p Welcome to #{title}
  form(id="users")
    div
        div
          span Full Username:
          input(name="username")
        div
          span Email:
          input(name="email")
        div
          input(type="submit" value="Save" id="save")

  a(href="/getdata") get data
  h1 #{item}

  script.
      $(document).ready(function(){
          $('#save').click(function () {
              var data = $('#users').serialize();
              $.ajax({
                  url: '/insert',
                  type: 'POST',
                  data: data,
                  success: function (data) {
                      alert('Success!')
                  }
              })
          });
      });
      


  form(method="post" action="update")
     h1 update
     span ID
     input(name="id" required)
     span full name
     input(name="username" required)
     span email
     input(name="email" required)
     input(type="submit" value="Update")

  form(method="post" action="/delete")
      h1 Delete
      span id
      input(name="id")
      input(type="submit" value="Delete")